@model StretchFitnessHub.Models.Member

@{
    ViewData["Title"] = "Member Details";
    Layout = null;
    bool isExpired = Model.MembershipEnd < DateTime.Now; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stretch Fitness Hub</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1e1e1e;
            color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .details-container {
            background: #2b2b2b;
            padding: 30px;
            border-radius: 12px;
            max-width: 400px;
            width: 90%;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
            color: #00bcd4;
        }

        .member-info p {
            margin: 10px 0;
            font-size: 15px;
        }

        .member-info strong {
            color: #fff;
        }

        .expired {
            color: #ff4c4c;
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="details-container">
        @if (isExpired)
        {
            <h2>Membership Status</h2>
            <p class="expired">Membership Expired</p>
        }
        else
        {
            <h2>Membership Details</h2>
            <div class="member-info">
                <p><strong>Name:</strong> @Model.FullName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>

                <p><strong>Membership Start:</strong> @Model.MembershipStart.ToString("MMMM dd, yyyy")</p>
                <p><strong>Membership End:</strong> @Model.MembershipEnd.ToString("MMMM dd, yyyy")</p>

                <p><strong>Status:</strong> @Model.Status</p>

                <p><strong>Plan:</strong> @Model.MembershipPlan</p>

                @if (Model.MembershipPlan == "ClassOnly" || Model.MembershipPlan == "GymWithClass")
                {
                    <p><strong>Preferred Class:</strong> @Model.PreferredClasses</p>
                }
            </div>

        }
    </div>
</body>
</html>
